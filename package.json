{
  "scripts": {
    "postinstall": "cd frontend/native && npm install",
    "start-frontend": "cd frontend/native && npx expo start --tunnel --clear",
    "start-backend": "cd backend/pharmacy && python manage.py runserver",
    "start": "concurrently \"npm run start-frontend\" \"npm run start-backend\"",
    "build": "npm install",
    "dev": "npm run start-frontend && npm run start-backend"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0"
  }
}
